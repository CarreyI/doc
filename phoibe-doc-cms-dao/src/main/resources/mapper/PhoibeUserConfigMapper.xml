<mapper namespace="me.phoibe.doc.cms.dao.PhoibeUserConfigMapper">
  <resultMap id="BaseResultMap" type="me.phoibe.doc.cms.domain.po.PhoibeUserConfig">
    <id column="ID" jdbcType="DECIMAL" property="id" />
    <result column="USER_ID" jdbcType="DECIMAL" property="userId" />
    <result column="WARS_TACTICS" jdbcType="DECIMAL" property="warsOrTactics" />
    <result column="USER_CONFIG" jdbcType="VARCHAR" property="config" />
    <result column="USER_CONFIG_NAMES" jdbcType="VARCHAR" property="configNames"/>
  </resultMap>

  <select id="selectUserConfig" resultType="me.phoibe.doc.cms.domain.po.PhoibeUserConfig">
    select * from PHOIBE_USER_CONFIG where USER_ID = #{userId} and WARS_TACTICS = #{warsOrTactics}
  </select>

  <select id="selectUserConfigRecords" parameterType="java.lang.Integer" resultType="java.lang.Integer">
    select count(*) from PHOIBE_USER_CONFIG where USER_ID = #{userId}
  </select>

  <insert id="insertUserConfig" parameterType="me.phoibe.doc.cms.domain.po.PhoibeUserConfig">
    insert into PHOIBE_USER_CONFIG (USER_ID, WARS_TACTICS,USER_CONFIG,USER_CONFIG_NAMES)
    values ( #{userId,jdbcType=DECIMAL}, #{warsOrTactics,jdbcType=DECIMAL},
      #{config,jdbcType=VARCHAR},#{config,jdbcType=VARCHAR})
  </insert>

  <delete id="deleteUserConfigByUserId" parameterType="java.lang.Integer">
    delete from PHOIBE_USER_CONFIG where USER_ID = #{userId}
  </delete>

